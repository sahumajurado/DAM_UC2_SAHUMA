<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#265087"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXAMEN DE ADMISIÓN 2024"
        android:textColor="#E3B142"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/id_ApellidosNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/text_ApellidosNombre"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/id_CorreoElectronico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/text_CorreoElectronico"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/id_ApellidosNombre"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="313dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/id_ApellidosNombre"
        app:layout_constraintTop_toBottomOf="@+id/id_CorreoElectronico" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="313dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/id_ApellidosNombre"
        app:layout_constraintTop_toBottomOf="@+id/id_ApellidosNombre" />

    <TextView
        android:id="@+id/id_clave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/text_Clave"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/id_ApellidosNombre"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="313dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/id_ApellidosNombre"
        app:layout_constraintTop_toBottomOf="@+id/id_clave" />

    <TextView
        android:id="@+id/id_fechaNacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/text_fechaNacimiento"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/id_ApellidosNombre"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

    <EditText
        android:id="@+id/id_Date"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="date"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/id_ApellidosNombre"
        app:layout_constraintTop_toBottomOf="@+id/id_fechaNacimiento" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Carrera"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/id_ApellidosNombre"
        app:layout_constraintTop_toBottomOf="@+id/id_Date" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="¿Por qué medio se enteró de la convocatoria?"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/id_ApellidosNombre"
        app:layout_constraintTop_toBottomOf="@+id/id_IngenieriaMecanica" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RadioGroup>

    <RadioButton
        android:id="@+id/id_Administracion"
        android:layout_width="162dp"
        android:layout_height="42dp"
        android:text="@string/radiobuttom_administracion"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/id_IngenieriaAmbiental"
        app:layout_constraintStart_toEndOf="@+id/id_IngenieriaMecanica"
        app:layout_constraintTop_toBottomOf="@+id/id_IngenieriaAmbiental" />

    <RadioButton
        android:id="@+id/id_IngenieriaAmbiental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/radiobuttom_IngenieriaAmbiental"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/id_IngenieriaSistemas"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <RadioButton
        android:id="@+id/id_IngenieriaSistemas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/radiobuttom_IngenieriaSistemas"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/id_ApellidosNombre"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <RadioButton
        android:id="@+id/id_IngenieriaMecanica"
        android:layout_width="173dp"
        android:layout_height="43dp"
        android:text="@string/radiobuttom_IngenieriaMecanica"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/id_ApellidosNombre"
        app:layout_constraintTop_toBottomOf="@+id/id_IngenieriaSistemas" />

    <CheckBox
        android:id="@+id/id_radio"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:text="@string/checkBox_radio"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/id_ApellidosNombre"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <CheckBox
        android:id="@+id/id_amigo"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:text="@string/checkbox_amigo"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/id_radio"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <CheckBox
        android:id="@+id/id_Internet"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:text="@string/checkBox_Internet"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/id_radio" />

    <CheckBox
        android:id="@+id/id_publicidad"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_marginStart="60dp"
        android:text="@string/checkBox_publicidad"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/id_amigo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/id_Internet"
        app:layout_constraintTop_toBottomOf="@+id/id_amigo" />

    <Button
        android:id="@+id/id_btn_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#E3B142"
        android:drawableLeft="@drawable/baseline_send_24"
        android:text="@string/boton_enviar"
        app:layout_constraintStart_toStartOf="@+id/id_ApellidosNombre"
        app:layout_constraintTop_toBottomOf="@+id/id_publicidad" />

</androidx.constraintlayout.widget.ConstraintLayout>